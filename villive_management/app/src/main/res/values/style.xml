<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tabTextSizeBold" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SpinnerDivideStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#000000</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="SpinnerTheme" parent="Theme.Villive_management">
        <item name="android:dropDownListViewStyle">@style/SpinnerDivideStyle</item>
    </style>

    <style name="SpinnerTextStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">#000000</item> <!-- 검정색 텍스트 -->
        <item name="android:textAlignment">center</item> <!-- 가운데 정렬 -->
        <item name="fontFamily">@font/wavvepadoregular</item>
    </style>

</resources>