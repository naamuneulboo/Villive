<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- 원의 배경색 -->
    <solid android:color="#80000000" /> <!-- 여기서는 약간 불투명한 회색을 사용하였습니다. -->

    <!-- 테두리 없음 -->
    <stroke android:width="0dp" />

    <!-- 원의 크기 설정 -->
    <size
        android:width="100dp"
        android:height="100dp" /> <!-- 원의 크기를 원하는 크기로 설정합니다. -->

</shape>
