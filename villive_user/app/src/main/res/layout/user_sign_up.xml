<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_SignPage.user_SignUp"
    android:background="@color/white"
    android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:contentDescription="@string/trim"
                app:srcCompat="@drawable/villive_logo" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="@string/sign_up_text" />


            <EditText
                android:id="@+id/et_name"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:autofillHints="   이름"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="#DFF8E1"
                android:ems="10"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="   이름"
                android:inputType="text" />


        <EditText
            android:id="@+id/et_id"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:autofillHints="아이디"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="#DFF8E1"
            android:ems="10"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="   아이디"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:autofillHints="세대 호수"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="#DFF8E1"
            android:ems="10"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="   닉네임"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_pw"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:autofillHints="비밀번호"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="#DFF8E1"
            android:ems="10"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="   비밀번호"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_pw_check"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:autofillHints="비밀번호 확인"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="#DFF8E1"
            android:ems="10"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="   비밀번호 확인"
            android:inputType="text" />

            <Button
                android:id="@+id/btn_sign_up"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:background="@drawable/rectangle_yellow"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="@string/sign_in" />

    </LinearLayout>
