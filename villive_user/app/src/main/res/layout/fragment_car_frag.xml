<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Management.car_frag"
    android:orientation="vertical"
    android:background="@color/white">

    <Button
        android:id="@+id/btn_go_registration"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="95dp"
        android:background="@drawable/st_round_rectangle"
        android:alpha="0.8"
        android:text="차량 등록하기"
        android:fontFamily="@font/wavvepadoregular"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:gravity="center"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/car_recycler"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        tools:listitem=""
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="한 가구당 2대의 차량만 등록이 가능합니다."
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/gmarketsansttfmedium"
        android:layout_marginTop="10sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="차량 등록에는 5초가량 소요됩니다."
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/gmarketsansttfmedium"
        />


</LinearLayout>