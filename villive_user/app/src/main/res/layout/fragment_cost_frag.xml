            android:layout_width="380dp"
            android:layout_height="100dp"
            android:src="@drawable/rectangle_img" />

        <Button
            android:layout_width="360dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:alpha="0"
            />

        <TextView
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="수도세"
            android:textSize="22sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/wavvepadoregular"
            />

        <View
            android:layout_width="80dp"
            android:layout_height="8dp"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="#AFE5C0"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="200dp"
            android:alpha="0.8"
            />

        <TextView
            android:id="@+id/water_cost_tx"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="25dp"
            android:text=""
            android:fontFamily="@font/wavvepadoregular"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="18sp"
            />

        <View
            android:id="@+id/water_default"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="#FF5757"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="310dp"
            android:alpha="0.7"
            />

        <TextView
            android:id="@+id/water_state_tx"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="45dp"
            android:text=""
            android:fontFamily="@font/wavvepadoregular"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20sp"
            />




    </FrameLayout>

    <FrameLayout
        android:id="@+id/power_cost_fl"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        >

        <ImageView
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:src="@drawable/rectangle_img" />

        <Button
            android:layout_width="360dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:alpha="0"
            />

        <TextView
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="전기세"
            android:textSize="22sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/wavvepadoregular"
            />

        <View
            android:layout_width="80dp"
            android:layout_height="8dp"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="#AFE5C0"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="200dp"
            android:alpha="0.8"
            />

        <TextView
            android:id="@+id/power_cost_tx"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="25dp"
            android:text=""
            android:fontFamily="@font/wavvepadoregular"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="18sp"
            />

        <View
            android:id="@+id/power_default"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="#FF5757"
