<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Community_Write.Post_Detail_View"

    android:orientation="vertical">






    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/logo_view"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:contentDescription="@string/trim"
            android:src="@drawable/villive_logo_white" />

        <!-- @@게시판 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="155dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="#454040"
            android:text="@string/community_post"
            android:textColor="#FF454040"
            android:textSize="25sp"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/ibtn_content_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="65dp"
            android:layout_gravity="end"
            android:background="@drawable/baseline_edit_24" />

        <ImageButton
            android:id="@+id/ibtn_content_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_gravity="end"
            android:background="@drawable/baseline_delete_24" />

    </FrameLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/post_background_rectangle"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/post_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gmarketsansttfmedium"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:text="게시글 제목"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />


                <TextView
                    android:id="@+id/post_contents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:paddingStart="20dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:fontFamily="@font/gmarketsansttflight"
                    android:text="게시글 내용"
                    tools:ignore="RtlSymmetry" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="15dp">

                    <TextView
                        android:id="@+id/post_writer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/gmarketsansttflight"
                        android:text="게시글 작성자"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/post_create_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gmarketsansttflight"
                        android:text="게시 시각"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:ignore="RtlSymmetry" />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="15dp">

                    <!--아직 적당한 그림을 못찾음-->
                    <Button
                        android:id="@+id/btn_gong_gam"
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:drawableStart="@drawable/baseline_sentiment_very_satisfied_24"
                        android:text="공감"
                        android:layout_marginStart="20dp"
                        android:drawablePadding="-5dp"
                        android:fontFamily="@font/gmarketsansttfmedium"
                        android:background="@drawable/white_gray_rectangle"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_gonggam_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gmarketsansttflight"
                        android:text="0"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_posts_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <EditText
            android:id="@+id/et_add_comment"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:autofillHints="댓글을 입력하세요."
            android:background="@drawable/white_gray_rectangle"
            android:ems="10"
            android:paddingStart="10dp"
            android:gravity="start|center_vertical"
            android:textColor="@color/black"
            android:textColorHint="@color/real_dark_gray"
            android:hint="댓글을 입력하세요."
            android:inputType="text"
            tools:ignore="RtlSymmetry" />

        <ImageButton
            android:id="@+id/ibtn_add_comment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/add_comment" />

    </LinearLayout>


</LinearLayout>