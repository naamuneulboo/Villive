<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:id="@+id/logo_view"
            android:src="@drawable/villive_logo"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="155dp"
            android:text="차량 등록"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            />

    </FrameLayout>

<EditText
    android:id="@+id/et_car_num"
    android:layout_marginTop="50dp"
    android:layout_width="350dp"
    android:layout_height="80dp"
    android:layout_gravity="center"
    android:background="@drawable/rounded_rectangle"
    android:backgroundTint="#E6FFEE"
    android:hint="차량 번호를 입력해주세요."
    android:fontFamily="@font/gmarketsansttflight"
    android:autofillHints="차량번호"
    android:textColorHint="@color/black"
    android:textColor="@color/black"
    android:gravity="center"
    android:textSize="30sp"
    android:elevation="10dp"
    android:inputType="text"
    />

    <Button
        android:id="@+id/btn_registration"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/st_round_rectangle"
        android:backgroundTint="#ADDDBC"
        android:text="등록하기"
        android:textColor="@color/black"
        android:textSize="25sp"
        />





</LinearLayout>