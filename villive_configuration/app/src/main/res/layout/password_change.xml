<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9FFF1"> <!-- 배경색을 여기서 변경할 수 있습니다. -->

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="242dp"
            android:layout_height="76dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/villive_logo_green" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="59dp"
            android:layout_marginTop="170dp"
            android:text="비밀번호는 최소 4자이상이어야 하며
            숫자, 영문, 특수문자(!@$%^*)를 포함
            해야 합니다."
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"/> <!-- 글자 진하게-->

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginLeft="59dp"
            android:layout_marginTop="280dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="현재 비밀번호"
            android:textColor="@color/black"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextNewPassword"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginLeft="59dp"
            android:layout_marginTop="340dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="새 비밀번호"
            android:textColor="@color/black"
            android:inputType="textPassword" />


        <EditText
            android:id="@+id/editTextCheckPassword"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginLeft="59dp"
            android:layout_marginTop="400dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="새 비밀번호 재입력"
            android:textColor="@color/black"
            android:inputType="textPassword" />

        <android.widget.Button
            android:id="@+id/button"
            android:layout_width="350dp"
            android:layout_height="53dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="580dp"
            android:background="@drawable/button_round"
            android:textColor="@color/black"
            android:text="비밀번호 변경" />

    </RelativeLayout>
</LinearLayout>