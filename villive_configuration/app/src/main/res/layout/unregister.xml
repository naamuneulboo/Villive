<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ConfigurationPage.AlarmActivity">

    <View
        android:id="@+id/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"
        android:layout_below="@+id/toolbar"/>

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/toolbar_title"
            android:text="회원탈퇴"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/text_ex1"
        android:text="탈퇴 시 개인정보, 활동 기록은 모두 삭제되며, 복구할 수 없습니다."
        android:layout_marginLeft="27dp"
        android:layout_marginTop="90dp"
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/text_ex2"
        android:text="작성한 게시글은 삭제되지 않으며, (회원탈퇴)로 닉네임이 표시됩니다."
        android:layout_marginLeft="27dp"
        android:layout_marginTop="150dp"
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/text_ex3"
        android:text="자세한 사항은 개인정보처리방침을 확인해주세요."
        android:layout_marginLeft="27dp"
        android:layout_marginTop="211dp"
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/text_ex4"
        android:text="비밀번호 입력"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="320dp"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:textColor="#000000"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="360dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:ems="12"
        android:hint="계정 비밀번호"
        android:inputType="text" />

    <android.widget.Button
        android:id="@+id/buttonUnregister"
        android:layout_width="353dp"
        android:layout_height="53dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="445dp"
        android:background="@drawable/button_unregister_background"
        android:text="회원탈퇴"
        android:textColor="#000000"
        android:textStyle="bold" />

</RelativeLayout>