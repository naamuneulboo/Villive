<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ConfigurationPage.ProfileSetupActivity">

    <View
        android:id="@+id/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"
        android:layout_below="@+id/toolbar"/>

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/toolbar_title"
            android:text="MyVillive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/imProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="90dp"
        android:background="?attr/selectableItemBackground"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="230dp"
        android:text="닉네임"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/editTextNickname"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="260dp"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="닉네임 입력"
        android:inputType="text" />

    <android.widget.Button
        android:id="@+id/buttonRepetedCheck"
        android:layout_width="350dp"
        android:layout_height="53dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="375dp"
        android:background="@drawable/button_round"
        android:text="닉네임 중복 확인"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"/>

    <android.widget.Button
        android:id="@+id/buttonCheck"
        android:layout_width="350dp"
        android:layout_height="53dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="445dp"
        android:background="@drawable/button_unregister_background"
        android:text="확인"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"/>

</RelativeLayout>